{
  "name": "@eclass/semantic-release-ssh-commands",
  "version": "1.0.1",
  "description": "semantic-release plugin to deploy app",
  "main": "src/index.js",
  "scripts": {
    "lint": "prettier-standard --lint '{src,test}/**/*.js'",
    "ts-compile-check": "tsc -p tsconfig.json --noEmit",
    "test": "nyc mocha test"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eclass/semantic-release-ssh-commands.git"
  },
  "keywords": [
    "release",
    "semantic-release"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eclass/semantic-release-ssh-commands/issues"
  },
  "homepage": "https://github.com/eclass/semantic-release-ssh-commands#readme",
  "dependencies": {
    "@semantic-release/error": "^2.1.0",
    "ssh-exec": "2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.1",
    "@commitlint/config-conventional": "9.1.1",
    "@eclass/eslint-config": "2.0.0",
    "@eclass/semantic-release-npm-github-config": "3.0.1",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/chai": "4.2.12",
    "@types/mocha": "8.0.2",
    "@types/node": "13.13.15",
    "@types/semantic-release": "17.1.0",
    "chai": "4.2.0",
    "eslint": "7.7.0",
    "eslint-plugin-array-func": "3.1.7",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jsdoc": "30.2.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-sonarjs": "0.5.0",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "mocha": "8.1.1",
    "mock-require": "3.0.3",
    "nyc": "15.1.0",
    "nyc-config-common": "1.0.1",
    "prettier-standard": "16.4.1",
    "semantic-release": "17.1.1",
    "sinon": "9.0.3",
    "stream-buffers": "3.0.2",
    "tempy": "0.6.0",
    "typescript": "3.9.7"
  },
  "peerDependencies": {
    "semantic-release": ">=11.0.0 <18.0.0"
  },
  "eslintConfig": {
    "extends": "@eclass"
  },
  "eslintIgnore": [
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "eslint --fix",
      "prettier-standard"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "extends": [
      "@eclass:js-lib"
    ]
  },
  "release": {
    "extends": "@eclass/semantic-release-npm-github-config"
  },
  "nyc": {
    "extends": "nyc-config-common"
  }
}
